@using PL.Properties
@using BLL.Properties
@using System.Drawing
@model PL.Models.MeetingModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Meeting";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/css/game-stylesheet.css" />
}



<div class="menu">
    @if (Model.PlayerIsAlive)
        {
            <div class="frame1">
                    @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String((byte[])new ImageConverter().ConvertTo(Model.Image, typeof(byte[]))) + "\" />")       
            </div>
            <div class="frame2">
                    @if(Model.ResultMeetingMessage != String.Empty)
                    {
                        <p>@Model.ResultMeetingMessage</p>
                    }
                    <p>@ScenarioTexts.WalkingMessage @Model.Name</p>
                    <p>@Model.WelcomeWord</p>
                    <p>Current budget: @Model.PlayerCurrentBudget</p>
                    @if(Model.Name.Contains("pub"))
                    {
                        <p>Current beers: @Model.PlayerCurrentBeers</p>
                    }
                    <div id="choice">
                        <a class="accept" asp-controller="Meeting" asp-action="Accept">Accept</a>
                        <a class="skip" asp-controller="Meeting" asp-action="Skip">Skip</a>
                    </div>
            </div>           
        }
        else
        {
            <div class="frame2">
                <p>@Model.ResultMeetingMessage</p>
                <p>@Model.PlayerScore</p>
            </div>
        }  
 </div>

